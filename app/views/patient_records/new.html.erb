<h1>Fill in your info</h1>
  <%= simple_form_for [current_user, @patient_record] do |f| %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone %>
    <%= f.input :gender %>
    <%= f.input :birth_date %>
    <%= f.input :weight %>
    <%= f.input :height %>
    <%= f.input :medical_condition %>
    <%= f.input :description %>
    <%= f.input :profile_picture, as: :file %>
    <%= f.submit "Submit", class: "btn btn-primary" %>
  <% end %>
</div>
